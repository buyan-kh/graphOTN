{
  "name": "gotn",
  "version": "0.1.0",
  "description": "Graph of Tiny Nodes - Break big prompts into atomic micro-prompts with dependency graphs",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter server dev",
    "clean": "pnpm -r clean",
    "api": "cd api && npm run dev",
    "viewer": "cd viewer && npm run dev",
    "type-check": "pnpm -r type-check"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.20.4",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4"
  }
}
